<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#9C27B0"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/headtab"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/circleimageview1"
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:src="@drawable/icon"
				app:civ_border_width="1dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true" />
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="BeatBot"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#F5F5F5" />
		</LinearLayout>
		<ScrollView
			android:id="@+id/vscroll1"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Write description"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#F5F5F5"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/clear"
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:src="@drawable/ic_clear_white"
						android:scaleType="center" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear7"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="5dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:orientation="horizontal">
					<EditText
						android:id="@+id/url"
						android:layout_width="match_parent"
						android:layout_height="115dp"
						android:layout_margin="5dp"
						android:padding="8dp"
						android:background="#FAFAFA"
						android:gravity="left|top"
						android:textSize="14sp"
						android:textColor="#212121"
						android:hint="upbeat pop with a tropical vibe' or 'calm classical for relaxation"
						android:textColorHint="#9E9E9E" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/genete"
					android:layout_width="match_parent"
					android:layout_height="52dp"
					android:layout_margin="10dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/gentext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Generate Track "
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#FAFAFA" />
					<ProgressBar
						android:id="@+id/progressbar1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:padding="8dp"
						android:indeterminate="false"
						style="?android:progressBarStyle" />
				</LinearLayout>
				<TextView
					android:id="@+id/plswait"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Please wait! "
					android:textSize="14sp"
					android:textColor="#EEEEEE" />
				<LinearLayout
					android:id="@+id/download"
					android:layout_width="match_parent"
					android:layout_height="52dp"
					android:layout_margin="10dp"
					android:padding="5dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/downlaod"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Download "
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#F5F5F5" />
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:src="@drawable/png"
						android:scaleType="fitXY" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="12sp"
					android:textColor="#000000"
					android:alpha="0.0" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
